{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/tests/e2e/**"
  ]
}
